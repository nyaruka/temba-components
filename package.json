{
  "name": "@nyaruka/temba-components",
  "version": "0.5.0",
  "description": "General Purpose Web Components",
  "author": "Nyaruka <code@nyaruka.com>",
  "homepage": "https://github.com/nyaruka/temba-components/",
  "license": "AGPL-3.0-only",
  "repository": "https://github.com/nyaruka/temba-components/",
  "files": [
    "build"
  ],
  "private": false,
  "main": "build/index.js",
  "scripts": {
    "compile": "tsc",
    "postversion": "git push --tags && git push origin master",
    "version": "yarn run build && auto-changelog -p && git add CHANGELOG.md",
    "build": "webpack --mode production && cp build/temba-components* build/index.js",
    "build:esm": "tsc --downlevelIteration --module es2015 --target es5 --outDir test",
    "start": "webpack-dev-server --mode development",
    "start:build": "http-server dist -o",
    "dev": "yarn run build && cp -R ./build/* ../rapidpro/node_modules/@nyaruka/temba-components/build/ && cp -R ./build/* ../biz/node_modules/@nyaruka/temba-components/build/ && cp -R ./build/* ../floweditor/node_modules/@nyaruka/temba-components/build/",
    "screenshots": "karma start --screenshots --single-run --mode=development",
    "test": "karma start --single-run --mode=development",
    "test:watch": "karma start --screenshots --auto-watch=true --single-run=false --mode=development",
    "test:watch-light": "karma start --auto-watch=true --single-run=false --mode=development",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots"
  },
  "dependencies": {
    "autosize": "4.0.2",
    "awesome-typescript-loader": "^5.2.1",
    "axios": "^0.20.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "buffer": "4",
    "es6-dynamic-template": "2.0.0",
    "fa-icons": "^0.2.0",
    "flru": "^1.0.2",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-nyan-reporter": "^0.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "leaflet": "1.5.1",
    "lit-element": "2.3.1",
    "lit-flatpickr": "^0.2.2",
    "lit-html": "1.2.1",
    "marked": "0.7.0",
    "node-forge": "0.10.0",
    "serialize-javascript": "^3.0.0",
    "textarea-caret": "3.1.0"
  },
  "devDependencies": {
    "@open-wc/building-webpack": "2.6.1",
    "@open-wc/karma-esm": "^3.0.5",
    "@open-wc/testing": "^2.5.25",
    "@open-wc/testing-karma": "^3.3.11",
    "@types/autosize": "3.0.6",
    "@types/leaflet": "1.4.4",
    "@types/moxios": "^0.4.9",
    "@types/textarea-caret": "3.0.0",
    "auto-changelog": "^1.16.2",
    "chai-karma-snapshot": "^0.8.0",
    "coverage-istanbul-loader": "^3.0.5",
    "file-loader": "^5.1.0",
    "http-server": "0.12.1",
    "karma": "^5.2.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-puppeteer-launcher": "https://github.com/nyaruka/karma-puppeteer-launcher",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^5.1.0",
    "karma-webpack": "^4.0.2",
    "mkdirp": "^1.0.3",
    "moxios": "^0.4.0",
    "owc-dev-server": "^0.3.0",
    "puppeteer": "^5.2.1",
    "sinon": "^9.0.3",
    "source-map-loader": "^1.1.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.4.1",
    "webpack-merge": "4.2.1"
  }
}
